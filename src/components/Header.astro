---
import Logo from './Logo.astro';

const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Contact', href: '/contact' }
];
---

<nav class="flex items-center justify-between py-2 max-w-5xl mx-auto px-6">
  <!-- Logo + Site Name -->
  <a href="/" class="flex items-center">
    <!-- Header logo uses default small size -->
    <Logo />
    <span class="ml-3 text-xl font-bold">TTJ Plumbing</span>
  </a>

  <!-- Navigation items -->
  <ul class="flex gap-4">
    {navItems.map(item => (
      <li>
        <a href={item.href} class="px-2 py-1 hover:text-gray-300">
          {item.linkText}
        </a>
      </li>
    ))}
  </ul>
</nav>
